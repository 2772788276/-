/* pages/info/info.wxss */
.navigator{
  background-color: rgb(87, 150, 231);
  height: 230rpx;
  color: white;
  font-size: 50rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon-xiangzuo{
  margin-right: 40rpx;
  margin-left: 40rpx;
  font-size: 60rpx;
}
.info{
  margin-top: 60rpx;
  margin-left: 80rpx;
}
.info view{
  margin-bottom: 30rpx;
  font-size: 40rpx;
  font-weight: 600;
}
.change{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  background-color: #6797e9;
  width: 500rpx;
  height: 70rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: white;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin-top: 150rpx;
  z-index: -1;
}
.empty{
  text-align: center;
  line-height: 50rpx;
}
.signinput {
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  justify-content: center;
}

.signinput view {
  font-size: 40rpx;
  text-align: center;
  width: 200rpx;
  height: 100%;
  line-height: 80rpx;
}

.signinput input {
  border: 1rpx solid rgb(211, 215, 218);
  background-color: rgb(255, 255, 255);
  padding-left: 20rpx;
  line-height: 80rpx;
  height: 100%;
  width: 350rpx;
  border-radius: 60rpx;
}

.signinput textarea {
  border: 1rpx solid rgb(211, 215, 218);
  background-color: rgb(255, 255, 255);
  padding-left: 20rpx;
  padding-top: 20rpx;
  line-height: 80rpx;
  height: 100%;
  width: 350rpx;
  border-radius: 60rpx;
}
.signensure {
  transform: translateX(-50%);
  position: absolute;
  left: 50%;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 40rpx;
  height: 80rpx;
  border-radius: 60rpx;
  background-color: rgb(72, 104, 250);
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
  margin-top: 100rpx;
  width:300rpx;
}

.signinput:last-child {
  height: 300rpx;
}

.grade {
  width: 350rpx;
}
