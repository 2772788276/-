/* components/progress/progress.wxss */
.container{
  z-index: 80;
  margin-top: 30rpx;
  width: 700rpx;
  height: 200rpx;
  background-color: rgb(239, 239, 239);
  border-radius: 50rpx;
}
.spancontainer{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
}
.span{
  z-index: 20;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 2rpx solid rgb(164, 172, 243);
  background-color: white;
  overflow: hidden;
  padding: 0;
}
.inner{
  position: relative;
  top:0rpx ;
  right: 60rpx;
  display: inline-block;
  background-color: rgb(164, 172, 243);
  z-index: 20;
  width: 50rpx;
  height: 50rpx;
}
.line{
  z-index: 1;
  position: absolute;
  height: 1rpx;
  width: 540rpx;
  background-color: rgb(164, 172, 243);
}
.peoplecontainer{
  margin-left: 50rpx;
  background-image: url(https://ts1.cn.mm.bing.net/th/id/R-C.4dd837d71c1f5173e1790feaec3b2db8?rik=RUVc6b8oXGSYKA&riu=http%3a%2f%2fbpic.588ku.com%2felement_pic%2f16%2f11%2f22%2f57cc6d601e8639a335914c5e26c17f2b.jpg&ehk=3rHVqpqhkU%2fl3p4rxC5sv%2f%2fx%2fOJr9mgWoBDKNAHuSNg%3d&risl=&pid=ImgRaw&r=0);
  background-size: 200rpx;
  background-position:51rpx 143rpx ;
  height: 80rpx;
  width: 50rpx;
}
@keyframes walk{
  0%{
    background-position: 33rpx 70rpx;
  }
  100%{
    background-position: 120rpx 70rpx;
  }
}
@keyframes forward1{
  0%{
    transform: translateX(-50rpx);
  }
  100%{
    transform: translateX(150rpx);
  }
}

@keyframes forward2{
  0%{
    transform: translateX(0);
  }
  100%{
    transform: translateX(270rpx);
  }
}
@keyframes forward3{
  0%{
    transform: translateX(0);
  }
  100%{
    transform: translateX(420rpx);
  }
}
@keyframes forward4{
  0%{
    transform: translateX(0);
  }
  100%{
    transform: translateX(550rpx);
  }
}
@keyframes move{
  0%{
    right:60rpx
  }
  100%{
    right: 0;
  }
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
}